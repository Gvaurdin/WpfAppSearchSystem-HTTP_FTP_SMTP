<Window x:Class="WpfAppSearchSystem_HTTP_FTP_SMTP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppSearchSystem_HTTP_FTP_SMTP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <TextBox x:Name="SearchTextBox" Width="300" Margin="5"/>
            <Button Content="Искать" Click="SearchButton_Click" Margin="5"/>
        </StackPanel>
        <WebBrowser x:Name="Browser" Grid.Row="1"/>
    </Grid>
</Window>
